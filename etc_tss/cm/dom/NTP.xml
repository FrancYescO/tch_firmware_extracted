<?xml version="1.0" encoding="UTF-8"?>
<datamodel name="Device" version="2.0">
    <object name="Time." access="readOnly" minEntries="1" maxEntries="1" set="NTP.sh">
        <parameter name="CurrentLocalTime" access="readOnly" activeNotify="canDeny" get="system.sh" store="no">
            <syntax>
                <dateTime/>
            </syntax>
        </parameter>
        <parameter name="Enable" access="readWrite">
            <syntax>
                <boolean/>
            </syntax>
        </parameter>
        <parameter name="LocalTimeZone" access="readWrite">
            <syntax>
                <string>
                    <size minLength="0" maxLength="256"/>
                </string>
            </syntax>
        </parameter>
        <parameter name="NTPServer1" access="readWrite">
            <syntax>
                <string>
                    <size minLength="0" maxLength="64"/>
                </string>
            </syntax>
        </parameter>
        <parameter name="NTPServer2" access="readWrite">
            <syntax>
                <string>
                    <size minLength="0" maxLength="64"/>
                </string>
            </syntax>
        </parameter>
        <parameter name="NTPServer3" access="readWrite">
            <syntax>
                <string>
                    <size minLength="0" maxLength="64"/>
                </string>
            </syntax>
        </parameter>
        <parameter name="NTPServer4" access="readWrite">
            <syntax>
                <string>
                    <size minLength="0" maxLength="64"/>
                </string>
            </syntax>
        </parameter>
        <parameter name="NTPServer5" access="readWrite">
            <syntax>
                <string>
                    <size minLength="0" maxLength="64"/>
                </string>
            </syntax>
        </parameter>
        <parameter name="Status" access="readOnly" activeNotify="canDeny" localNotify="forceEnabled" store="no">
            <syntax>
                <string>
                    <enumeration value="Disabled"/>
                    <enumeration value="Unsynchronized"/>
                    <enumeration value="Synchronized"/>
                    <enumeration value="Error_FailedToSynchronize"/>
                    <enumeration value="Error"/>
                </string>
                <default value="Disabled"/>
            </syntax>
        </parameter>
        <parameter name="X_ADB_Permissive" access="readWrite">
            <syntax>
                <boolean/>
                <default value="false"/>
            </syntax>
        </parameter>
        <parameter name="X_ADB_MinPoll" access="readWrite">
            <description>Minimum poll exponent, 2^min seconds</description>
            <syntax>
                <unsignedInt>
                     <range minInclusive="4" maxInclusive="17" step="1"/>
                </unsignedInt>
		<default value="6"/>
            </syntax>
        </parameter>
        <parameter name="X_ADB_MaxPoll" access="readWrite">
            <description>Maximum poll exponent, 2^max seconds</description>
            <syntax>
                <unsignedInt>
                     <range minInclusive="4" maxInclusive="17" step="1"/>
                </unsignedInt>
		<default value="10"/>
            </syntax>
        </parameter>
        <parameter name="X_ADB_DriftTime" access="readWrite" aliasOnGet="%s(false)" store="no">
            <description>Triggered to true when on drift time greater than 10 sec detected by the NTP service.</description>
            <syntax hidden="true">
                <boolean/>
                <default value="false"/>
            </syntax>
        </parameter>
        <parameter name="X_ADB_EnablePPPNTPServerDiscovery" access="readWrite">
            <description>
                Enable automatic discovery of NTP servers from PPP MOTM tag.
                The MOTM tag has to have following format : ntp|ntp1=address1[,ntpN=addressN...]
            </description>
            <syntax>
                <boolean/>
                <default value="false"/>
            </syntax>
        </parameter>
    </object>
    <object name="Time.X_ADB_AvailableTimeZone." excludeUser="Assurance,CWMP" access="readOnly" minEntries="1" maxEntries="1">
	<description>This object specifies the available timezone to be used by {{param|#.LocalTimeZone}}.</description>
        <parameter name="LocationNumberOfEntries" access="readOnly" store="no">
            <description>{{numentries}}</description>
            <syntax>
                <unsignedInt/>
                <default value="0"/>
            </syntax>
        </parameter>
        <parameter name="LocalLocation" access="readWrite">
            <description>The path of location instance selected as local location.</description>
            <syntax>
	        <string>
                    <pathRef refType="strong" targetType="row"/>
                </string>
                <default value=""/>
            </syntax>
        </parameter>
    </object>
    <object name="Time.X_ADB_AvailableTimeZone.Location.{i}." access="readOnly" minEntries="0" maxEntries="unbounded" numEntriesParameter="LocationNumberOfEntries">
        <description>
		An instance of this object represents a world location, defined by 'Area' and 'City'. Each location has a timezone and an GMT offset.
        </description>
        <parameter name="Area" access="readOnly">
            <description>The area of location.</description>
            <syntax>
                <string/>
            </syntax>
        </parameter>
        <parameter name="City" access="readOnly">
            <description>The city of location.</description>
            <syntax>
                <string/>
            </syntax>
        </parameter>
        <parameter name="TzString" access="readOnly">
            <description>The time zone of location, encoded according to IEEE 1003.1 (POSIX). This value is a possible value for the parameter {{param|##.LocalTimeZone}}.</description>
            <syntax>
                <string/>
            </syntax>
        </parameter>
        <parameter name="Offset" access="readWrite">
            <description>The timezone offset for the location.</description>
            <syntax>
                <string/>
            </syntax>
        </parameter>
    </object>
</datamodel>
