<?xml version="1.0" encoding="UTF-8"?>
<datamodel name="DeviceInfo" version="2.0">
    <object name="AgentInfo." access="readOnly" minEntries="1" maxEntries="1">
        <parameter name="AgentHardwareVersion" access="readOnly">
            <description>Vendor ID on which TSS is working</description>
            <syntax>
                <string>
                        <size minLength="0" maxLength="64"/>
                </string>
                <default value=""/>
            </syntax>
        </parameter>
        <parameter name="AgentSoftwareVersion" access="readOnly">
            <description>Test agent version</description>
            <syntax>
                <string>
                        <size minLength="0" maxLength="64"/>
                </string>
                <default value=""/>
            </syntax>
        </parameter>
        <parameter name="AgentProductClass" access="readOnly">
            <description>Test Agent product class </description>
            <syntax>
                <string>
                        <size minLength="0" maxLength="64"/>
                </string>
                <default value="Epicure Agent"/>
            </syntax>
        </parameter>
        <parameter name="AgentManufacturer" access="readOnly">
            <description>Test Agent Manufacturer</description>
            <syntax>
                <string>
                        <size minLength="0" maxLength="64"/>
                </string>
                <default value="Advanced Digital Broadcast SA"/>
            </syntax>
        </parameter>
        <parameter name="SpeedTestSchedulingSupported" access="readOnly">
            <description>indicates whether or not the scheduling of all tests in the {IPPingDiagnostics, DownloadDiagnostics, UploadDiagnostics} tuple is supported</description>
            <syntax>
                <boolean/>
                <default value="true"/>
            </syntax>
        </parameter>
        <parameter name="SpeedTestSchedulingOngoing" access="readOnly" get="AgentInfo.sh">
            <description>indicates whether or not a scheduling of at least one test in the {IPPingDiagnostics, DownloadDiagnostics, UploadDiagnostics} tuple has been set up and has not yet terminated</description>
            <syntax>
                <boolean/>
                <default value="false"/>
            </syntax>
        </parameter>
        <parameter name="SchedulingOngoing" access="readOnly" get="AgentInfo.sh">
            <description>Indicates whether or not a scheduling of at least one of the tests supported by the Test Agent has been set up and has not yet terminated</description>
            <syntax>
                <boolean/>
                <default value="false"/>
            </syntax>
        </parameter>
    </object>
    <object name="DeviceInfo." access="readOnly" minEntries="1" maxEntries="1">
        <parameter name="MACAddress" access="readOnly">
            <description>MAC address that identifies the specific CPE where the Test Agent is being executed</description>
            <syntax>
                <dataType ref="MACAddress"/>
            </syntax>
        </parameter>
    </object>
</datamodel>