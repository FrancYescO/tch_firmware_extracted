#!/bin/sh

. /lib/functions/uci-defaults.sh

uci set network.wan=interface
uci set network.wan.proto=pppoe
uci set network.wan.ifname=vlan_wan
uci set network.wan.keepalive=5,10

uci set network.wan.auto='0'
uci set network.wan.reqopts='1 3 6 15 33 42 51 121 249'
uci set network.wan.vendorid=`uci get env.var.company_name`
uci set network.wan.graceful_restart='1'
uci set network.wan.authfail='0'
uci set network.wan.mtu='1500'
uci set network.wan.ipv6='0'
uci set network.wan.release='1'
uci set network.wan.iface6rd='0'

uci set network.vdsl_check=interface
uci set network.vdsl_check.proto=pppoe
uci set network.vdsl_check.ifname=ptm0
uci set network.vdsl_check.keepalive=5,10

uci set network.vdsl_check.auto='0'
uci set network.vdsl_check.reqopts='1 3 6 15 33 42 51 121 249'
uci set network.vdsl_check.vendorid=`uci get env.var.company_name`
uci set network.vdsl_check.graceful_restart='1'
uci set network.vdsl_check.authfail='0'
uci set network.vdsl_check.mtu='1500'
uci set network.vdsl_check.ipv6='0'
uci set network.vdsl_check.release='1'
uci set network.vdsl_check.iface6rd='0'

uci set network.bt_iptv=interface
uci set network.bt_iptv.ifname=vlan_wan
uci set network.bt_iptv.auto='1'
uci set network.bt_iptv.proto='static'
uci set network.bt_iptv.ipaddr='169.254.10.1'
uci set network.bt_iptv.netmask='255.255.255.255'

uci set network.eth4=device
uci set network.eth4.mtu=1500
uci set network.eth4.name=eth4

uci set network.ptm0=device
uci set network.ptm0.mtu=1508
uci set network.ptm0.name=ptm0

uci set network.vlan_wan=device
uci set network.vlan_wan.type=8021q
uci set network.vlan_wan.ifname=ptm0
uci set network.vlan_wan.mtu='1508'
uci set network.vlan_wan.name=vlan_wan
uci set network.vlan_wan.vid=101


uci set network.wwan=interface
uci set network.wwan.auto='1'
uci set network.wwan.metric='10'

uci set network.wan6=interface
uci set network.wan6.ifname=@wan
uci set network.wan6.proto=dhcpv6
uci set network.wan6.reqopts='12 21 22 23 24 25 31 56 64 67 82 83'
uci set network.wan6.noslaaconly=1
uci set network.wan6.iface_464xlat='0'

uci commit network

exit 0
