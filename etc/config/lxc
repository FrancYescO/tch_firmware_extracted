config lxc 'global'
	option enabled '1'

config lxc_instance 'lxc_ee'
	option enabled '1'
	option lxc_net_0_type 'none'
	option lxc_net_0_flags 'up'
	option lxc_cgroup_cpuset_cpus '1'
	option lxc_cgroup_memory_limit_in_bytes '50M'
	option lxc_rootfs_path 'overlay:/srv/lxc/lxc_ee/rootfs:/opt/lcm.technicolor.com/upper'
	option lxc_uts_name 'FastwebLXC'
	option ubus_proxy 'use_ipc'
	option ubus_user 'lxc_fastweb'
	option ubus_createuser '1'
	option config_dir_path '/etc/fastweb_app_config'
	option coredump_reboot 0
	option coredump_action nocore
	list includes '/usr/share/lxc/include.conf'
