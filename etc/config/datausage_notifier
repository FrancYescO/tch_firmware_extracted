config global 'global'
	option tracelevel '5'

config action 'datausage_limit_intercept'
	list events 'limit_reached'
	list events 'ignore_limit'
	list events 'reset'
	option handler 'intercept'
	list interfaces 'wan'
	list interfaces 'wwan'
	option enabled '1'

config action 'datausage_threshold_intercept'
	list events 'threshold_reached'
	list events 'ignore_threshold'
	list events 'reset'
	option handler 'intercept'
	list interfaces 'wan'
	list interfaces 'wwan'
	option enabled '1'