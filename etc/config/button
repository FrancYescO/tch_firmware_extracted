config button resetpressed
	option button 'BTN_0'
	option action 'pressed'
	option handler "ubus send reset.button \'{\"action\":\"pressed\", \"resetinfo\":\"\"}}\'"

config button resetabort
	option button 'BTN_0'
	option action 'released'
	option handler "ubus send reset.button \'{\"action\":\"released\", \"resetinfo\":\"abort\"}}\'"
	option min '0'
	option max '10'

config button reset
	option button 'BTN_0'
	option action 'released'
	option handler 'rtfd'
	option min '10'
	option max '30'

config button line
	option button 'BTN_3'
	option action 'pressed'
	option handler 'button_line_pressed.sh &'

config button wifi
	option button 'BTN_1'
	option action 'pressed'
	option handler 'button_wifi_pressed.sh &'

config button wps
	option button 'BTN_2'
	option action 'pressed'
	option handler 'button_wps_pressed.sh &'

config button 'ua_register'
    option action 'released'
    option max '5'
    option handler 'logger INFO ua_register pressed ; ubus send button '\''{ "wps" : "pressed" }'\'''
    option min '0'
    option button 'BTN_2'
