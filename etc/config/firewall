	option name		 SMTP
	option src		 lan
	option dest		 wan
	option proto		 tcp
	option dest_port	 25
	option target		 ACCEPT

config highrule
	option name		 POP3
	option src		 lan
	option dest		 wan
	option proto		 tcp
	option dest_port	 110
	option target		 ACCEPT

config highrule
