# guest1
config zone
	option name		 'guest1'
	list network		 'guest1'
	option input		 'REJECT'
	option output		 'ACCEPT'
	option forward		 'DROP'
	option wan		 '0'

config forwarding
	option src		 'guest1'
	option dest		 'wan'

config rule
	option name		 'Allow DNS Queries'
	option src		 'guest1'
	option dest_port	 '53'
	option proto		 'tcpudp'
	option target		 'ACCEPT'

config rule
	option name		 'Allow DHCP request'
	option src		 'guest1'
	option src_port		 '67-68'
	option dest_port	 '67-68'
	option proto		 'udp'
	option target		 'ACCEPT'

