	option target		 ACCEPT

config highrule
	option name		 SSH
	option src		 lan
	option dest		 wan
	option proto		 tcp
	option dest_port	 22
	option target		 ACCEPT

config rule
	option name		 SSH-wan
	option src		 wan
	option proto		 tcp
	option dest_port	 22
	option target		 DROP

config defaultrule 'defaultoutgoing'
	option name		 'Default action for outgoing NAT'
	option src		 'lan'
	option dest		 'wan'
	option proto		 'all'
	option target		 'ACCEPT'
