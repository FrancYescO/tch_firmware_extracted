config samba 'samba'
        option 'name'                   'Modem TIM'
        option 'workgroup'              'WORKGROUP'
        option 'description'            'Modem TIM'
        option 'configsdir'             '/var/etc/smb.auto'		#NG-87371
        option 'homes'                  '1'
        option 'enabled'                '1'
        option 'filesharing'            '1'
        option 'charset'                'UTF-8'
        option 'printcap_cache_time'    '5'

		
config 'sambashare' 'printers' #NG-87371
        option 'name' 'printers'
        option 'path' '/var/spool/samba'
        option 'guest_ok' 'yes'
        option 'printable' 'yes'
        option 'browsable' 'no'
        option 'writable' 'no'
        option 'enabled' '1'
        option 'min_print_space' '80000'


		
