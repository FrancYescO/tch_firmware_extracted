config samba 'samba'
        option 'name'                   'Home_Network_Gateway'
        option 'workgroup'              'WORKGROUP'
        option 'description'            'Home Network Gateway'
        option 'configsdir'             '/var/etc/smb.auto'
        option 'homes'                  '1'
        option 'enabled'                '1'
        option 'filesharing'            '1'
        option 'charset'                'UTF-8'
        option 'printcap_cache_time'    '5'

config 'sambashare' 'printers'
        option 'name' 'printers'
        option 'path' '/var/spool/samba'
        option 'guest_ok' 'yes'
	option 'create_mask' '0700'
	option 'dir_mask' '0700'
        option 'printable' 'yes'
        option 'browsable' 'no'
        option 'writable' 'no'
        option 'enabled' '0'
        option 'min_print_space' '10000'
