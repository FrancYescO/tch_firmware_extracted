config system
    option hostname	OpenWrt
    option timezone 'CST6CDT,M4.1.0,M10.5.0'
    option zonename 'America/Mexico_City'
    option network_timezone '1'
    option log_size '32'

config timeserver ntp
    list server	'mx.pool.ntp.org'
    list server	'north-america.pool.ntp.org'
    list server 'time.windows.com'
    option enable_server 1

config config config
	option export_plaintext	0
	option export_unsigned	0
	option import_plaintext	1
	option import_unsigned	0
	option export_commonkey 'GW'
	option import_commonkey 'GW'
	option import_restricted 1

config coredump
	option reboot	'1'
	option action	'compress'
	option path	'/root'

config kernel_crash
	option action	'compress'
	option path	'/root'

config log logread
	option path 'logread'
	option size '0'
	option rotate '0'
