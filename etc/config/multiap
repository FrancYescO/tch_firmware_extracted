
config global 'al_entity'
	option interfaces 'lo,eth0,eth1,eth2,eth3,wl0,wl1,wl1_2,wds*'
	option topology_discovery_interval '60'
	option lldp_bridge_discovery_interval '3'

config global 'agent'
	option enabled '0'
	option macaddress ''
	option default_hysteresis_margin '1'
	option bss_list 'wl0,wl1,wl1_2'
	option fronthaul_list 'wl0,wl1'
	option backhaul_list 'wl1_2'
	option backhaul_link 'lo'
	option hidden_backhaul '0'
	option beacon_metrics_timeout '2'
	option beacon_metrics_max_duration_ms '100'
	option wireless_bh_enable_timeout '30'
	option overide_acs '0'
	option allow_tx_power_setting '0'

config global 'controller'
	option enabled '0'
	option macaddress ''
	option preferred_bh_iface 'Auto'
	option mgmt_ipc_report_interval '5'
	option topology_query_interval '60'
	option link_metric_query_interval '60'
	option dead_agent_detection_interval '30'
	option channel_selection_enabled '1'
	option configure_BH_STA '1'
        option supported_security_modes 'none wpa2-psk'

config global 'island_protection'
	option enabled '0'
	option bh_link_detection_interval '60'
	option bss_list 'null'

config global 'wee_bhs'
	option enabled '0'
	option uplink_rssi_threshold '-70'
	option health_check_interval '15'
	option steering_hold_duration '300'
	option dead_agent_retention_period '300'

config controller_capabilities 'controller_capabilities'
	option freq_2_4g '1'
	option freq_5g '1'
	option freq_60g '0'

config controller_policy_config 'controller_policy_config'
	option metrics_report_interval '1'
	option sta_metrics_rssi_threshold_dbm '70'
	option sta_metrics_rssi_hysteresis_margin '5'
	option ap_metrics_channel_utilization_threshold_dbm '0'
	option sta_link_sta_traffic_stats '192'

## cred0 - Fronthaul.
## cred 1 - 5G Fronthaul - This needs to enabled only when 2G and 5G must have
## different FH SSID, in which case enable state as 1 and also remove
## radio_5Gu,radio_5Gl from cred0.
## cred 2 - Backhaul only. Current only 5G but if needed for 2G, add radio_2G.
## The above sequence will be easy to switch between same and different
## 2G and 5G SSID requirements.
## SSID and key will be set by default in the firstboot script.
## Mode is by default wpa2-psk.
config controller_credentials 'cred0'
	option state '1'
	option ssid 'SET_BY_SCRIPT'
	option wpa_psk_key 'SET_BY_SCRIPT'
	option security_mode 'wpa2-psk'
	option fronthaul '1'
	option backhaul '0'
	option frequency_bands 'radio_2G,radio_5Gl,radio_5Gu'

config controller_credentials 'cred1'
	option state '0'
	option ssid 'SET_BY_SCRIPT'
	option wpa_psk_key 'SET_BY_SCRIPT'
	option security_mode 'wpa2-psk'
	option fronthaul '0'
	option backhaul '0'
	option frequency_bands 'radio_5Gl,radio_5Gu'

config controller_credentials 'cred2'
	option state '1'
	option ssid 'SET_BY_SCRIPT'
	option wpa_psk_key 'SET_BY_SCRIPT'
	option security_mode 'wpa2-psk'
	option fronthaul '0'
	option backhaul '1'
	option frequency_bands 'radio_5Gl,radio_5Gu'

config global 'logging'
	option library '6'
	option ieee1905 '4'
	option agent '4'
	option controller '4'
	option vendor_ipc '4'
