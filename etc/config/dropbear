config dropbear 'lan'
	option enable '0'
	option Interface 'lan'
	option PasswordAuth 'on'
	option RootPasswordAuth 'on'
	option Port '22'
	option IdleTimeout '600'

config dropbear 'wan'
	option enable '0'
	option Interface 'wan'
	option PasswordAuth 'on'
	option RootPasswordAuth 'on'
	option Port '22'
	option IdleTimeout '600'
	option RootLogin '0'
