config dropbear 'lan'
	option enable '0'
	option Interface 'lan'
	option PasswordAuth 'off'
	option RootPasswordAuth 'off'
	option RootLogin '0'
	option Port '22'
	option IdleTimeout '600'

config dropbear 'wan'
	option enable '0'
	option Interface 'wan'
	option PasswordAuth 'off'
	option RootPasswordAuth 'off'
	option RootLogin '0'
	option Port '22'
	option IdleTimeout '600'
	option RootLogin '0'
