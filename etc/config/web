config sessionmgr 'default'
    option cookiepath '/'
    option authpath '/authenticate'
    option passpath '/password'
    option timeout '10080'
    list users 'user_default'
    option default_user 'user_default'
    option ruleset 'ruleset_main'

config user 'user_default'
    option role 'admin'

config ruleset 'ruleset_main'
    list rules 'status'

config rule 'status'
    option target '/status.cgi'
    list roles 'admin'
