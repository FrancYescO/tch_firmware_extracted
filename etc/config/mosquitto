config owrt
  option use_uci '1'

config mosquitto 'mosquitto'
  option log_dest 'syslog'
  option per_listener_settings '1'
  option no_remote_access '1'
  option port '1883'

config listener 'listener'
  option port '8883'
  option capath '/tmp/certs/ca/'
  option certfile '/tmp/certs/chain.pem'
  option keyfile '/tmp/certs/key.pem'
  option require_certificate '1'
  option tls_version 'tlsv1.2'
  option ciphers 'ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384'
  option auth_plugin  '/usr/lib/mosquitto/wd_auth_plugin.so'
  option auth_opt_certfile  '/tmp/certs/chain.pem'
