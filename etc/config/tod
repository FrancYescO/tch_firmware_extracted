config tod 'global'
        option enabled '1'
        option tod_enabled '1'
        option tracelevel '6'
        option time_change_monfreq '10'

config timer 'sleep_hours'
        option start_time 'All:22:00'
        option stop_time 'All:06:30'

config action 'ledtod'
        option enabled '0'
        list timers 'sleep_hours'
        option script 'ledtodscript'

config timer "timer_wifidisable"
        option start_time 'All:22:00'
        option stop_time 'All:07:00'

config timer 'timer_wifidisable_weekend'
        option periodic '1'
        option enabled '0'

config timer 'timer_wifidisable_workend'
        option periodic '1'
        option enabled '0'

config action 'action_wifidisable'
        option enabled '0'
        list timers 'timer_wifidisable'
        list timers 'timer_wifidisable_weekend'
        list timers 'timer_wifidisable_workend'
        option script 'wifitodscript'

config timer 'timer_guest_restriction'
        option periodic '0'

config action 'action_guest_restriction'
        option enabled '1'
        list timers 'timer_guest_restriction'
        option script 'guestrestriction'
        option object '0|all'
