#Internal Classification Labels
config label 'dscp_Zero'
	option dscp '0'

config label 'Normal'
	option trafficid '1'

config label 'User'
	option trafficid '2'

config label 'Video'
	option trafficid '3'

config label 'DNS'
	option trafficid '4'

config label 'Management'
	option trafficid '5'

config label 'DHCP'
	option trafficid '6'

config label 'Voice'
	option trafficid '7'

config label 'Voice_LAN'
	option trafficid '8'

#Qos Class Definition (queue's)

#TO_WAN
config class 'W_Q0'
	option priority '0'
    option weight '10'

config class 'W_Q1'
	list trafficid '2'
    list trafficid '3'
	option priority '0'
    option weight '10'

config class 'W_Q2'
	list trafficid '4'
	option priority '0'
    option weight '20'

config class 'W_Q3'
	list trafficid '5'
	option priority '0'
    option weight '40'

config class 'W_Q4'
	list trafficid '6'
	option priority '1'
    option weight '40'

config class 'W_Q5'
	list trafficid '7'
	option priority '1'
    option weight '40'

config class 'W_Q6'
	list trafficid '8'
	option priority '1'
    option weight '40'

#TO_LAN
config class 'L_Q0'
	option priority '0'

config class 'L_Q1'
	list trafficid '3'
	option priority '1'

config class 'L_Q2'
	list trafficid '4'
	list trafficid '5'
	list trafficid '6'
	option priority '2'

