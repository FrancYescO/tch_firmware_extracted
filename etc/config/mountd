config mountd mountd
	option	timeout		600
	option	path		/mnt/usb/

config filesystem ext2
	option options		'noexec,errors=continue'
	option fstype		'ext2'

config filesystem ext3
	option options		'noexec,errors=continue'
	option fstype		'ext3'

config filesystem ext4
	option options		'noexec,errors=continue'
	option fstype		'ext4'

config filesystem fat
	option options		'umask=0000,noatime,noexec,errors=continue,iocharset=utf8'
	option fstype		'vfat'

config filesystem hfsplus
	option options		'noatime,noexec,uid=000,gid=000,umask=000,force,iocharset=utf8'
	option fstype		'ufsd'

config filesystem hfsplusjournal
	option options		'noatime,noexec,uid=000,gid=000,umask=000,force,iocharset=utf8'
	option fstype		'ufsd'

config filesystem ntfs
	option options		'noatime,noexec,sparse,nocase,nobuf,uid=000,gid=000,umask=000,force,iocharset=utf8'
	option fstype		'ufsd'
