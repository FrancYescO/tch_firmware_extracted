# This file contains some shell environmental variables which are platform
# specific and which are needed for rabid to work properly. It is meant to
# be sourced by other rabid scripts

# Following values are suitable for the most of platforms. If any of the values
# below is not correct for given platform, platform specific file needs to be
# created using this one as template

CUJO_HOME=${CUJO_HOME:-}
if [ -z "$CUJO_HOME" ]; then
    CUJO_HOME=/opt/cujo
fi
export CUJO_HOME

export PATH="$CUJO_HOME/bin:$PATH"
export LD_LIBRARY_PATH="$CUJO_HOME/lib:$CUJO_HOME/lib/lua:${LD_LIBRARY_PATH:-}"

export RABID_RUNPATH=/var/run/cujo
export RABID_PID_FILE=/var/run/rabid.pid
export RABID_LOG_FOLDER=/var/log/rabid
