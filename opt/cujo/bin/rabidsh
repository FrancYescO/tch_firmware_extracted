# This sh has pipefail:
# shellcheck disable=SC2039
set -euo pipefail

# Emulate dirname with sed because not all platforms have dirname.
CUJO_HOME=$(echo "$0" | sed '
/\//! {
        c .
        p
        q
}
s ^\(.*\)/[^/]\+$ \1 ')/..
export CUJO_HOME

LD_LIBRARY_PATH=$CUJO_HOME/lib:${LD_LIBRARY_PATH:-} \
    "$CUJO_HOME"/bin/lua "$CUJO_HOME"/share/lua/cujo/shell/client.lua "$@"
