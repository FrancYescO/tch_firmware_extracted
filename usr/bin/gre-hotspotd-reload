#!/bin/sh

HASHFILE=/tmp/run/.hashes/gre_hotspotd

CFGHASH=$(sha256sum /etc/config/gre_hotspotd | cut -d" " -f1)

if [ "$1" = "update" ]; then
  mkdir -p $(dirname $HASHFILE)
  echo $CFGHASH >$HASHFILE
  exit
fi

OLDHASH=$(cat $HASHFILE)
if [ "$CFGHASH" != "$OLDHASH" ]; then
  /etc/init.d/gre-hotspotd reload
fi